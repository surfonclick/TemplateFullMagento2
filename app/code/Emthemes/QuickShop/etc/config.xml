<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
	<default>
		<quickshop>
			<general>
				<active>1</active>
				<label>Quick Shop</label>
				<additional_tab_display>1</additional_tab_display>
				<review_tab_display>1</review_tab_display>
				<auto_add_buttons>1</auto_add_buttons>
				<item_class><![CDATA[.product-item]]></item_class>
				<target><![CDATA[.product-item-info]]></target>
			</general>
			<magnifier_options>
				<fullscreenzoom>5</fullscreenzoom>
				<top>0</top>
				<left>450</left>
				<width>400</width>
				<height>400</height>
				<eventtype>hover</eventtype>
				<status>true</status>
			</magnifier_options>
		</quickshop>
	</default>
</config>
